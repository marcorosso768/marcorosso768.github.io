---
layout: null
permalink: /sitemap.xml
---
<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9"
        xmlns:xhtml="http://www.w3.org/1999/xhtml">
  {% assign languages = "en,it,es" | split: "," %}
  {% for page in site.pages %}
    {% assign page_path = page.url %}
    {% if page_path contains "/en/" %}
      <!-- English (default, no language prefix in loc) -->
      <url>
        <loc>{{ site.url }}{{ site.baseurl }}{{ page_path | remove: '/en' }}</loc>
        <!-- Alternate language links -->
        <xhtml:link rel="alternate" hreflang="it" href="{{ site.url }}{{ site.baseurl }}/it{{ page_path | remove: '/en' }}" />
        <xhtml:link rel="alternate" hreflang="es" href="{{ site.url }}{{ site.baseurl }}/es{{ page_path | remove: '/en' }}" />
      </url>
    {% elsif page_path contains "/it/" %}
      <!-- Italian version -->
      <url>
        <loc>{{ site.url }}{{ site.baseurl }}{{ page_path }}</loc>
        <!-- Alternate language links -->
        <xhtml:link rel="alternate" hreflang="en" href="{{ site.url }}{{ site.baseurl }}{{ page_path | remove: '/it' }}" />
        <xhtml:link rel="alternate" hreflang="es" href="{{ site.url }}{{ site.baseurl }}/es{{ page_path | remove: '/it' }}" />
      </url>
    {% elsif page_path contains "/es/" %}
      <!-- Spanish version -->
      <url>
        <loc>{{ site.url }}{{ site.baseurl }}{{ page_path }}</loc>
        <!-- Alternate language links -->
        <xhtml:link rel="alternate" hreflang="en" href="{{ site.url }}{{ site.baseurl }}{{ page_path | remove: '/es' }}" />
        <xhtml:link rel="alternate" hreflang="it" href="{{ site.url }}{{ site.baseurl }}/it{{ page_path | remove: '/es' }}" />
      </url>
    {% endif %}
  {% endfor %}
</urlset>
