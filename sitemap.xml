---
layout: null
permalink: /sitemap.xml
---
<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9"
        xmlns:xhtml="http://www.w3.org/1999/xhtml">
  {% assign languages = "en,it,es" | split: "," %}
  {% for page in site.pages %}
    {% assign page_path = page.url | remove: '/' %}
    {% for lang in languages %}
      <url>
        <!-- Main URL for this language version -->
        {% if lang == "en" %}
          <loc>{{ site.url }}{{ site.baseurl }}/{{ page_path }}</loc>
        {% else %}
          <loc>{{ site.url }}{{ site.baseurl }}/{{ lang }}/{{ page_path }}</loc>
        {% endif %}
        
        <!-- Alternate language links -->
        {% for alternate_lang in languages %}
          {% if alternate_lang == "en" %}
            <xhtml:link rel="alternate" hreflang="{{ alternate_lang }}" href="{{ site.url }}{{ site.baseurl }}/{{ page_path }}" />
          {% else %}
            <xhtml:link rel="alternate" hreflang="{{ alternate_lang }}" href="{{ site.url }}{{ site.baseurl }}/{{ alternate_lang }}/{{ page_path }}" />
          {% endif %}
        {% endfor %}
      </url>
    {% endfor %}
  {% endfor %}
</urlset>
