---
layout: default
---

<div>
  <embed id="cv-pdf" src="{{ "/assets/pdf/cv-light.pdf" | relative_url }}" type="application/pdf" width="100%" height="1200px">
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    function loadPDFBasedOnTheme() {
      const pdfViewer = document.getElementById('cv-pdf');
      const darkModeMediaQuery = window.matchMedia('(prefers-color-scheme: dark)');

      // Check if dark mode is enabled
      if (darkModeMediaQuery.matches) {
        pdfViewer.src = '{{ "/assets/pdf/cv-dark.pdf" | relative_url }}'; // Path to dark theme PDF
      } else {
        pdfViewer.src = '{{ "/assets/pdf/cv-light.pdf" | relative_url }}'; // Path to light theme PDF
      }
    }

    // Load the correct PDF on page load
    loadPDFBasedOnTheme();

    // Listen for changes in the theme and update the PDF accordingly
    darkModeMediaQuery.addEventListener('change', loadPDFBasedOnTheme);
  });
</script>
