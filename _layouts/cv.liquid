<!-- Download Button for Light Version -->
<div id="download-btn-container" style="text-align: center; margin-bottom: 60px;">
  <a id="download-btn" href="{{ "/assets/pdf/cv-light.pdf" | relative_url }}" download="[Marco Rosso] Curriculum Vitae.pdf" class="btn" style="text-transform: none;">download curriculum vitae</a>
</div>

<div style="text-align: center; margin-top: 80px;">
  <embed id="cv-pdf" src="{{ "/assets/pdf/cv-light.pdf" | relative_url }}" type="application/pdf" width="100%" height="1200px">
</div>

<style>
  /* Default (light mode) styles */
  .cv-container-light {
    background-color: #ffffff; /* Light background */
    color: #000000; /* Dark text */
  }

  /* Dark mode styles */
  .cv-container-dark {
    background-color: #333333; /* Dark background */
    color: #ffffff; /* Light text */
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    function loadPDFBasedOnTheme() {
      const pdfViewer = document.getElementById('cv-pdf');
      const darkModeMediaQuery = window.matchMedia('(prefers-color-scheme: dark)');

      // Check if dark mode is enabled
      if (darkModeMediaQuery.matches) {
        pdfViewer.src = '{{ "/assets/pdf/cv-dark.pdf" | relative_url }}'; // Show dark theme PDF
      } else {
        pdfViewer.src = '{{ "/assets/pdf/cv-light.pdf" | relative_url }}'; // Show light theme PDF
      }
    }

    // Load the correct PDF on page load
    loadPDFBasedOnTheme();

    // Listen for changes in the theme and update the PDF accordingly
    window.matchMedia('(prefers-color-scheme: dark)').addEventListener('change', loadPDFBasedOnTheme);
  });
</script>
