<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=yes">
    <style>
        /* Flex container to center the iframe */
        .iframe-container {
            display: flex;
            justify-content: center;
            align-items: center;
            width: 100%;
            margin: 20px 0;
        }

        /* Responsive iframe */
        iframe {
            width: 100%; /* Full width for small screens */
            max-width: 1200px; /* Maximum width for large screens */
            border: none;
            height: auto; /* Let JS control height dynamically */
        }

        /* Download button */
        .button-container {
            display: flex;
            justify-content: center; /* Centers the button horizontally */
            align-items: center;
            margin: 20px 0;
        }

        .download-button {
            padding: 10px 20px;
            border-radius: 5px;
            text-transform: lowercase;
            cursor: pointer;
            font-size: 16px;
            text-align: center;
            text-decoration: none;
            margin-bottom: 20px;
            display: inline-block;
        }

        /* Responsive behavior for mobile devices */
        @media (max-width: 768px) {
            iframe {
                max-width: 100%; /* Ensure iframe scales for mobile */
            }

            .download-button {
                width: 80%; /* Ensure button scales well */
                max-width: 300px;
            }
        }

        /* Extra small mobile devices */
        @media (max-width: 480px) {
            .download-button {
                width: 90%;
            }
        }
    </style>
    <script>
        // JavaScript to adjust iframe height to maintain aspect ratio
        function adjustIframeHeight() {
            var iframe = document.querySelector("iframe");
            if (iframe) {
                // Standard A4 aspect ratio: height is approximately 1.414 times the width
                var aspectRatio = 1.414;
                var iframeWidth = iframe.clientWidth;
                var iframeHeight = iframeWidth * aspectRatio;
                iframe.style.height = iframeHeight + "px";
            }
        }

        // Adjust height on page load and window resize
        window.onload = adjustIframeHeight;
        window.onresize = adjustIframeHeight;
    </script>
</head>
<body>

    <!-- Title -->
    <div class="post">
        <header class="post-header">
        <h1 class="post-title">{{ page.title }}</h1>
        <p class="post-description">{{ page.description }}</p>
        </header>
    </div>

    <!-- Download button centered on the page -->
    <div class="button-container">
        <a href="{{ "/assets/pdf/cv-light.pdf" | relative_url }}" download="[Marco Rosso] Curriculum Vitae.pdf" class="download-button">
            download curriculum vitae
        </a>
    </div>

    <!-- Embed the PDF using iframe for better mobile support -->
    <div class="iframe-container">
        <iframe src="{{ site.baseurl }}/assets/pdf/cv-light.pdf" title="Curriculum Vitae"></iframe>
    </div>

</body>
</html>
